<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TitleTextStyle">
        <item name="android:textSize">@dimen/titleTextSize</item>
        <item name="android:textColor">@color/colorTitle</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ContentTextStyle">
        <item name="android:textSize">@dimen/contentTextSize</item>
        <item name="android:textColor">@color/colorContent</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="CommentTextStyle">
        <item name="android:textSize">@dimen/commentTextSize</item>
        <item name="android:textColor">@color/colorComment</item>
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
